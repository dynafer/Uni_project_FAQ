
<!doctype html>

<html lang="en">
	<head>
		<meta charset="utf-8">
		<title>Home Page</title>
		<meta name="description" content="Detail of a selected question page">
		<meta name="author" content="Haseong Kim">
		<link href="../style.css" type="text/css" rel="stylesheet" />
	</head>
	<body>
		<center>
		<h1>Frequently Asked Questions</h1>
		{{#if check}}
		<p><a href="/logout">Log out</a></p>
		{{else}}
		<p><a href="/login">Log in</a>&nbsp;&nbsp;&nbsp;&nbsp;<a href="/register">Register</a></p>
		{{/if}}
		<p><a href="/list">List</a>{{#if check}}&nbsp;&nbsp;&nbsp;&nbsp;<a href="/writeQuestion">Ask</a>{{/if}}</p>

        <div class="detailQuestion">
			{{#with getInfo}}
				<div class="title">
					<div class="solved">
						{{#if_eq solved 0}}
							[Ongoing]
						{{else}}
							[Solved]
						{{/if_eq}} 
						{{title}}
					</div>
				</div>
				<div class="author">
					Author <span class="author_name">{{author}}</span> <span class="date">({{createDate}})</span>
				</div>
				<div class="description">{{{description}}}</div>
				{{#if_eq imageBool 1}}
					<div id="image" class="image">
						<img src="{{imageData}}">
					</div>
				{{/if_eq}}
			{{/with}}
        </div>
		</center>
	</body>
</html>
