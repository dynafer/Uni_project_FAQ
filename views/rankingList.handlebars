
<!doctype html>

<html lang="en">
	<head>
		<meta charset="utf-8">
		<title>Home Page</title>
		<meta name="description" content="User Contribution Ranking List">
		<meta name="author" content="Haseong Kim">
		<link href="style.css" type="text/css" rel="stylesheet" />
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
	</head>
	<body>
		<center>
			<h1>Frequently Asked Questions</h1>
			{{#if check}}
				<p><a href="/logout">Log out</a></p>
			{{else}}
				<p><a href="/login">Log in</a>&nbsp;&nbsp;&nbsp;&nbsp;<a href="/register">Register</a></p>
			{{/if}}
			<p><a href="/list">List</a>{{#if check}}&nbsp;&nbsp;&nbsp;&nbsp;<a href="/writeQuestion">Ask</a>{{/if}}</p>
			<p><a href="/ranking">Ranking</a></p>

			<div class="rankingList">
				<div class="listHeader">
					<div class="listHeaderEach"><b>Rank</b></div>
					<div class="listHeaderEach"><b>Username</b></div>
					<div class="listHeaderEach"><b>Contribution</b></div>
				</div>
				{{#if_eq list.nolist true}}
			</div>
					<h2>No lists found</h2>
				{{else}}
					{{#each list as |value key|}}
						<div class="listEach">
							{{#with this}}
								<div onclick="location.href='./faq/{{id}}'" class="listEachCell">{{rank}}</div>
								<div onclick="location.href='./faq/{{id}}'" class="listEachCell"><span class="rankedStar {{rankedUser}}"></span> {{user}}</div>
								<div onclick="location.href='./faq/{{id}}'" class="listEachCell">{{contribution}}</div>
							{{/with}}
						</div>
					{{/each}}
			</div>
				{{/if_eq}}
		</center>
	</body>
</html>
